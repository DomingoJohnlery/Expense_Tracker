<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#3A4047">

    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Account"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/layoutInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tvEdit">

        <TextView
            android:id="@+id/tvInitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initial Amount"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/initialForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Currency"
            android:background="@drawable/edit_text_border"
            android:ems="4"
            android:gravity="start"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="0"
            android:textColorHint="@color/white"
            android:layout_marginVertical="10dp"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="42sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/layoutInitial">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvPaymentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:ems="4"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textSize="42sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutName"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button"
            android:text="Cancel"
            android:ems="5"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_border"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button"
            android:ems="5"
            android:text="Save"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_border"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>



</RelativeLayout>